<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities.SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:background="#F5F5F5"
            android:layout_marginLeft="85dp"
            android:layout_marginBottom="20dp" >

            <ImageView
                android:id="@+id/logo_iv"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:srcCompat="@drawable/ic_signup_screen" />

            <TextView
                android:id="@+id/find_pg_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="StudReference"
                android:layout_marginLeft="15dp"
                android:textColor="#6C6AFF"
                android:textSize="27sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/theme_color"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/triangle_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="-3dp"
                android:layout_marginRight="333dp"
                app:srcCompat="@drawable/ic_triangle" />

            <TextView
                android:id="@+id/registration_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="20dp"
                android:text="Registration"
                android:textColor="#FFFFFF"
                android:textSize="28dp" />

            <TextView
                android:id="@+id/below_registration_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="15dp"
                android:text="Login if your mobile number register"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />

            <LinearLayout
                android:id="@+id/user_container_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:id="@+id/user_iv"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/ic_user" />

                <EditText
                    android:id="@+id/fullname"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:backgroundTint="#FFFFFF"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Full Name"
                    android:textColorHint="#FFFFFF"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mobile_container_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:id="@+id/mobile_iv"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/ic_mobile" />

                <EditText
                    android:id="@+id/mobile"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:backgroundTint="#FFFFFF"
                    android:ems="10"
                    android:inputType="phone"
                    android:hint="Mobile number"
                    android:textColorHint="#FFFFFF"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/email_container_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:id="@+id/email_iv"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/ic_email" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:backgroundTint="#FFFFFF"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:hint="Email Id"
                    android:textColorHint="#FFFFFF"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/profession_container_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:id="@+id/college_iv"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_college" />

                <TextView
                    android:id="@+id/college_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="4dp"
                    android:text="College/School"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />

            </LinearLayout>

            <RadioGroup
                android:id="@+id/college_radio_grp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp">

                <RadioButton
                    android:id="@+id/name_radio_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="240dp"
                    android:text="Name"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/college"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-44dp"
                    android:layout_marginLeft="92dp"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="#FFFFFF"
                    android:ems="10"
                    android:inputType="textPersonName" />

            </RadioGroup>

            <LinearLayout
                android:id="@+id/gender_container_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:id="@+id/gender_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_branch" />

                <TextView
                    android:id="@+id/gender_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="4dp"
                    android:text="Branch/Stream"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />

            </LinearLayout>

            <RadioGroup
                android:id="@+id/gender_radio_grp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:id="@+id/male_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="236dp"
                    android:text="Name"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/branch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-44dp"
                    android:layout_marginLeft="92dp"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="#FFFFFF"
                    android:ems="10"
                    android:inputType="textPersonName" />

            </RadioGroup>

            <LinearLayout
                android:id="@+id/password_container_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:id="@+id/password_iv"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/ic_password" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:backgroundTint="#FFFFFF"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttons_container"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="100dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/loginbtn2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#DACA67ED"
                    android:text="Already have an account? &#10; LOG IN "
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/registerbtn1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:drawableRight="@drawable/ic_forward_arrow"
                    android:text="SIGN UP"
                    android:textColor="@color/theme_color"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>